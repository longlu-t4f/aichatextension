{
  "manifest_version": 3,
  "name": "AI Chat Sidebar",
  "version": "0.1.0",
  "description": "选中文本一键发送至侧边栏，通过固定接口生成 AI 回复，并支持复制。",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "打开 AI Chat Sidebar"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/selection.js"
      ],
      "css": [
        "content/selection.css"
      ],
      "type": "module",
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/logo.png"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "options_page": "src/options/index.html"
}


